<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="style" parent="Widget.AppCompat.SearchView">
        <item name="android:textCursorDrawable">@android:drawable/arrow_down_float</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="closeIcon">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="queryHint">Поиск</item>
        <item name="android:imeActionId">6</item>
    </style>
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@android:color/holo_green_dark</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@android:color/holo_green_dark</item>
    </style>
</resources>
