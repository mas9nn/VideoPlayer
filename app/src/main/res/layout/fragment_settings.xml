<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/back"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textperemotka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Быстрая перемотка"
        android:textColor="?attr/textColor"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forward_peremotka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Перемотка вперед"
        android:textColor="?attr/textColor"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/textperemotka" />

    <TextView
        android:id="@+id/backforw_peremotka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Перемотка назад"
        android:textColor="?attr/textColor"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/forward_peremotka" />

    <TextView
        android:id="@+id/seconds_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+15sec"
        android:textColor="?attr/textColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/forward_peremotka"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/forward_peremotka" />

    <TextView
        android:id="@+id/seconds_backford"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="-15sec"
        android:textColor="?attr/textColor"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/backforw_peremotka"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/backforw_peremotka" />

    <TextView
        android:id="@+id/account_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Аккаунт"
        android:layout_marginTop="20dp"
        android:textColor="?attr/textColor"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/backforw_peremotka" />

    <TextView
        android:id="@+id/clear_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Очистить историю поиска"
        android:textColor="?attr/textColor"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/account_set" />


</androidx.constraintlayout.widget.ConstraintLayout>