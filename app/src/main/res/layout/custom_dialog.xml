<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#3E80B4"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/add_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Фильтры поиска"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Добавлено"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/add_txt"
        app:layout_constraintTop_toBottomOf="@id/add_txt" />


    <TextView
        android:id="@+id/choiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="За все время"
        app:layout_constraintLeft_toRightOf="@id/add"
        app:layout_constraintTop_toTopOf="@id/add"/>

    <ImageView
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/choiser"
        app:layout_constraintLeft_toRightOf="@id/choiser"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/add" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Длительность"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="@id/add_txt"
        app:layout_constraintTop_toBottomOf="@id/add_btn" />


    <TextView
        android:id="@+id/duration_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="Любая"
        app:layout_constraintLeft_toRightOf="@id/add"
        app:layout_constraintTop_toTopOf="@id/duration" />

    <ImageView
        android:id="@+id/add_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/duration_txt"
        app:layout_constraintLeft_toRightOf="@id/choiser"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/duration" />

    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_btn_2"
        app:layout_constraintRight_toRightOf="@id/add_btn_2"
        android:layout_marginTop="30dp"
        android:text="Применить"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:text="отмена"
        app:layout_constraintRight_toLeftOf="@+id/ok"
        app:layout_constraintTop_toBottomOf="@id/add_btn_2" />

</androidx.constraintlayout.widget.ConstraintLayout>